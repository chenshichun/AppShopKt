<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:paddingHorizontal="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/default_head_pic_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/iv_head"
                app:layout_constraintLeft_toRightOf="@id/iv_head"
                app:layout_constraintTop_toTopOf="@id/iv_head">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_14" />

                <TextView
                    android:id="@+id/tv_inv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/inv_code"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_14" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_message"
                app:layout_constraintBottom_toBottomOf="@id/iv_head"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_head" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="余额"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/dimen_font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的团队"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/dimen_font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的积分"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/dimen_font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/dimen_font_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="优惠券"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/dimen_font_12" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_black_20"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="当前等级：VIP1 服务费：20%"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_power_15"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="我的特权"
                android:textColor="@color/color_333" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@drawable/bg_white_8"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textColor="@color/color_333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_show_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/go_right"
                    android:gravity="center"
                    android:text="查看全部"
                    android:textColor="@color/color_999" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="待付款"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_order_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="待发货"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_order_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="待收货"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_order_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="待评价"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_order_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="退款/售后"
                    android:textColor="@color/color_333" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@drawable/bg_white_8"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textColor="@color/color_333"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="收藏夹"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="我的关注"
                    android:textColor="@color/color_333" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="邀请好友"
                    android:textColor="@color/color_333" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/color_333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="用户安全"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_merchant_settled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="商户入驻"
                    android:textColor="@color/color_333" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_out_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/color_333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/default_head_pic_icon"
                    android:drawablePadding="@dimen/dimen_dp_10"
                    android:gravity="center"
                    android:text="检查更新"
                    android:textColor="@color/color_333" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>