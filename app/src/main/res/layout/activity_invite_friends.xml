<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/view_head"
        layout="@layout/layout_head" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前等级"
                android:textColor="@color/color_333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · VIP1"
                android:textColor="@color/color_333"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="服务费比率：20%"
            android:textColor="@color/color_333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:background="@drawable/bg_white_8"
            android:orientation="vertical"
            android:padding="@dimen/dimen_dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何升级为分红股东："
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="1.直推15个有效会员"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="2.为平台引流500活跃粉丝以上，每个月有消费一单，无论金额"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="3.除去最大的团队，还有50人的团队"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="4.跟公司申请，并提交营业执照，申请通过可以被吸纳为分红股东"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="5.分红股东的好处：享受平台每天服务费的50%分红"
                android:textColor="@color/color_333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:background="@drawable/bg_white_8"
            android:orientation="vertical"
            android:padding="@dimen/dimen_dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="邀请方式"
                android:textColor="@color/color_333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_10"
                android:text="点击下方【分享邀请链接】或【生成邀请海报】生成专属推广信息，分享好友、群，让好友注册即可升级"
                android:textColor="@color/color_333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_dp_15"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_yellow_5"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/dimen_dp_10"
                android:text="生成邀请海报" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_15"
                android:layout_weight="1"
                android:background="@drawable/bg_red_5"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/dimen_dp_10"
                android:text="分享邀请链接" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>