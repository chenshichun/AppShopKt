<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_integral"
        android:paddingHorizontal="8.5dp"
        android:paddingVertical="3dp"
        android:text="@string/goods_integral"
        android:visibility="invisible"
        android:textColor="#965E0E"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_price"
        android:textColor="#ffb80000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_goods_sales"
        android:gravity="center"
        android:text="@string/goods_sell"
        android:textColor="@color/color_666"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="这是商品标题这是商品标题这是商品标题这是商品标题这是商品标题这是商品标题这是商品标题"
        android:textColor="@color/color_333"
        android:textSize="@dimen/dimen_font_15"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_integral"
        app:layout_constraintTop_toBottomOf="@id/tv_integral" />

    <LinearLayout
        android:id="@+id/ll_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_integral"
        app:layout_constraintTop_toBottomOf="@+id/tv_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/confirm_bg"
            android:paddingHorizontal="8.5dp"
            android:paddingVertical="3.5dp"
            android:text="店铺"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="店铺名称"
            android:textColor="@color/color_666" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>