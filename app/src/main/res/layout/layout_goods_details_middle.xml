<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_dp_10"
    android:background="@drawable/bg_white_8"
    android:paddingHorizontal="6dp"
    android:paddingVertical="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="必买理由"
        android:textColor="@color/color_333"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_buy_reason_share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_buy_reason_share" />

    <TextView
        android:id="@+id/tv_buy_reason_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icon_goods_share"
        android:drawablePadding="5dp"
        android:text="文案分享"
        android:textColor="@color/blue"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_buy_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:background="@drawable/bg_buy_reason"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="@dimen/dimen_dp_15"
        android:text="购买理由"
        android:textSize="@dimen/dimen_font_10"
        app:layout_constraintTop_toBottomOf="@id/tv_buy_reason_share" />
</androidx.constraintlayout.widget.ConstraintLayout>