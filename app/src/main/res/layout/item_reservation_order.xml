<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_white_8"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/checkbox"
        style="@style/CustomCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="订单编号：568931232434"
        android:textColor="#FFC107"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这是预约订单详情"
        android:textColor="@color/color_333"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_number"
        app:layout_constraintTop_toBottomOf="@id/tv_order_number" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_default_pic"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_order_number" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="滴滴商铺"
        android:textColor="@color/color_333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_number"
        app:layout_constraintTop_toBottomOf="@id/tv_order_detail" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15068156432"
        android:drawableLeft="@drawable/icon_phone"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:textColor="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_shop_name" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="浙江省义乌市江南大道115号店铺"
        android:textColor="@color/color_666"
        app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />

    <TextView
        android:id="@+id/tv_order_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这是预约订单内容"
        android:textColor="@color/color_999"
        app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="￥100"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_order_context" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-08-20 12:11:22"
        android:textColor="@color/color_999"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/hollow_blue_5_bg"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="取消订单"
        android:textColor="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />
</androidx.constraintlayout.widget.ConstraintLayout>