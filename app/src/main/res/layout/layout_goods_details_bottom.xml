<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp">

        <LinearLayout
            android:id="@+id/ll_goods_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_dp_20"
                android:layout_height="@dimen/dimen_dp_20"
                android:background="@drawable/icon_goods_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_dp_20"
                android:layout_height="@dimen/dimen_dp_20"
                android:background="@drawable/icon_goods_uncollect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="收藏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_dp_20"
                android:layout_height="@dimen/dimen_dp_20"
                android:background="@drawable/icon_goods_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="购物车" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/hollow_blue_20"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_dp_10"
            android:text="加入购物车"
            android:textColor="@color/blue"
            android:textSize="@dimen/dimen_font_15" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/confirm_bg"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_dp_10"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_font_15" />
    </LinearLayout>
</RelativeLayout>