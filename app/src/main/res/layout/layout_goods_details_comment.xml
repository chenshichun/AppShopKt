<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_dp_10"
    android:background="@color/white"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝贝评论（3）"
        android:textColor="@color/ps_color_33"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_comment_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_default_pic"
        app:layout_constraintLeft_toLeftOf="@id/tv_comment_count"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_count" />

    <TextView
        android:id="@+id/iv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="cuckoo"
        android:textColor="@color/color_333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_comment_head"
        app:layout_constraintTop_toTopOf="@id/iv_comment_head" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-7-12"
        android:textColor="@color/color_999"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_comment_name" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rb_comment_score"
        style="@style/Widget.MaterialRatingBar.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxHeight="16dp"
        android:minHeight="16dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_comment_name"
        app:layout_constraintTop_toBottomOf="@id/iv_comment_name"
        app:mrb_progressTint="@color/red"
        app:mrb_secondaryProgressTint="@color/red" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这是商品评论，商品很好！"
        android:textColor="@color/color_666"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_comment_head"
        app:layout_constraintTop_toBottomOf="@id/iv_comment_head"
        />

</androidx.constraintlayout.widget.ConstraintLayout>