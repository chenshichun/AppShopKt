<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="merchant_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp_50</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="merchant_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="merchant_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="my_toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/color_666</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">20dp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="head_title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="head_cl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="mine_order_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dimen_dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="mine_tool_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dimen_dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="tv_order">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>